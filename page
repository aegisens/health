function changeLanguage(lang) {
    console.log("Zmieniam jƒôzyk na:", lang);
    
    const t = translations[lang];
    if (!t) {
        console.error("Brak t≈Çumaczenia dla:", lang);
        return;
    }
    
    // Proste przypisania - mniej podatne na b≈Çƒôdy
    try {
        // Tytu≈Ç
        const title = document.querySelector('.logo h1');
        if (title) title.textContent = t.title;
        
        // Podtytu≈Ç
        const subtitle = document.querySelector('.logo .subtitle');
        if (subtitle) subtitle.textContent = t.subtitle;
        
        // Coming Soon
        const comingSoon = document.querySelector('.coming-soon h2');

if (comingSoon) comingSoon.textContent = t.comingSoon;
        
        // Opis
        const description = document.querySelector('.coming-soon p');
        if (description) description.textContent = t.description;
        
        // Features
        const features = document.querySelectorAll('.feature-text h3');
        if (features.length >= 3) {
            features[0].textContent = t.feature1;
            features[1].textContent = t.feature2;
            features[2].textContent = t.feature3;
        }
        
        // Descriptions
        const descs = document.querySelectorAll('.feature-text p');
        if (descs.length >= 3) {
            descs[0].textContent = t.feature1desc;
            descs[1].textContent = t.feature2desc;
            descs[2].textContent = t.feature3desc;
        }
        
        // Countdown text
        const countdownText = document.querySelector('.countdown-text');
        if (countdownText) countdownText.textContent = t.countdownText;
        
        // Button
        const button = document.querySelector('.cta-button');
        if (button) button.textContent = t.buttonText;
        
        // Footer
        const footerDivs = document.querySelectorAll('.footer div');
        if (footerDivs.length >= 2) {
            footerDivs[0].textContent = t.poweredBy;
            if (footerDivs[1].classList.contains('tech-badge')) {
                footerDivs[1].textContent = t.badgeText;
            }
        }
        
        console.log("Jƒôzyk zmieniony pomy≈õlnie na:", lang);
        
        // Pod≈õwietl aktywny przycisk
        document.querySelectorAll('.language-switcher button').forEach(btn => {
            btn.style.opacity = '0.7';
        });
        const activeBtn = document.querySelector(button[onclick*="${lang}"]);
        if (activeBtn) {
            activeBtn.style.opacity = '1';
            activeBtn.style.fontWeight = 'bold';
        }
        
    } catch (error) {
        console.error("B≈ÇƒÖd zmiany jƒôzyka:", error);
    }
}

// Automatyczna zmiana przy ≈Çadowaniu
window.addEventListener('DOMContentLoaded', function() {
    console.log("Strona za≈Çadowana, inicjujƒô jƒôzyk...");
    const savedLang = localStorage.getItem('aegisens_lang') || 'en';
    changeLanguage(savedLang);
});
    </script>
